<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom text appearance for inactive state -->
    <style name="BottomNavTextAppearance.Inactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item> <!-- Use the font file here -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item> <!-- Customize the inactive text color -->
    </style>

    <!-- Custom text appearance for active state -->
    <style name="BottomNavTextAppearance.Active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item> <!-- Use the bold version of the font -->
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item> <!-- Customize the active text color -->
    </style>
</resources>